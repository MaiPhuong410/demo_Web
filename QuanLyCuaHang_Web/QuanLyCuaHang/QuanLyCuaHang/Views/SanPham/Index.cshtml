@model IEnumerable<QuanLyCuaHang.Models.SanPham>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới sản phẩm", "Create")
    @using (Html.BeginForm())
    {
        <p>@Html.TextBox("searchString") <input type="submit" value="Tìm Kiếm"/></p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.MaDMId)*@
            <label>Mã Id danh mục</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.MaSP)*@
            <label>Mã sản phẩm</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TenSP)*@
            <label>Tên sản phẩm</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.HinhAnh)*@
            <label>Hình minh họa</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.MoTa)*@
            <label>Mô tả</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GiaSP)*@
            <label>Giá sản phẩm</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDMId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.HinhAnh)*@  
            <img src="~/HinhAnh/@Url.Content(item.HinhAnh)"
                 alt="HinhAnh"
                 width="100"
                 height="80"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaSP)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
