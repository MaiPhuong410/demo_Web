@model IEnumerable<QuanLyCuaHang.Models.DanhMuc>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Danh mục</h2>

<p>
    @Html.ActionLink("Thêm danh mục mới", "Create")
</p>

<table class="table">
    <tr>
        <th>
            <label>Mã ID</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.MaDM)*@
            <label>Mã danh mục</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TenDM)*@
            <label>Tên danh mục</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem =>item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaDM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDM)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
